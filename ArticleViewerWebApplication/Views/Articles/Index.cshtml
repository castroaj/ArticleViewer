@model IEnumerable<ArticleViewerWebApplication.Models.Article>

@{
    ViewBag.Title = "Home Page";
}

<body>

    <header class="w3-container w3-center w3-padding-32">
        <h1><b>Welcome to Article Viewer</b></h1>
        <h4>Recently posted articles</h4>
    </header>

    @foreach (var item in Model)
    {
        <div class="w3-col 18 s12">
            <div class="w3-card-4 w3-margin w3-white">
                <div class="w3-container">
                    <div class="w3-section">
                        <h2>
                            <b>@item.header</b>
                        </h2>
                        <h5>Posted By: @item.author</h5>
                        <h5>Date Posted: @item.date</h5>
                    </div>
                </div>

                <div class="w3-container">
                    <p>@item.body</p>
                    <div class="w3-row">
                        <div class="w3-col col-md-8 s12">
                            <p><button class="w3-button w3-padding-large w3-border">VIEW AUTHOR'S PAGE  >></button></p>
                        </div>
                        <div class="w3-col m4 w3-hide-small">
                            <p><span class="w3-padding-large w3-right"><b>Comments</b> <span class="w3-badge">@item.comments.Count</span></span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</body>


