@model ArticleViewerWebApplication.Models.Article

@{
    ViewBag.Title = "Create";
}
<div class="w3-container w3-white" style="margin: 25px;">
    <h2>Create</h2>


    @using (Html.BeginForm("Create", "MyArticles", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="control-label col-md-2">
                    <label>Title Your Article: </label>
                </div>
                <div class="col-md-10">
                    <input name="title" required />
                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">
                    <label>Preview for Home Page:</label>
                </div>
                <div class="col-md-10">
                    <textarea name="articlePreview" type="text" required></textarea>
                    @Html.ValidationMessageFor(model => model.articlePreview, "", new { @class = "text-danger" })
                </div>
            </div>

            @{ 
                var numberOfParagraphs = 3;
            }
            

            @for (int i = 0; i < numberOfParagraphs; i++)
            {
                <div class="form-group">
                    <div class="control-label col-md-2">
                        <label>Paragraph #@(i+1):</label>
                    </div>
                    <div class="col-md-10">
                        <textarea name="[@i]" type="text" required></textarea>
                    </div>
                </div>
            }


            <div class="form-group">
                <div class="control-label col-md-2">
                    <label>Upload An Image:</label>
                </div>
                <div class="col-md-10">
                    <input type="file" name="imageData" />
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
