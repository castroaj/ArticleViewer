@model IEnumerable<ArticleViewerWebApplication.Models.Article>

@{
    ViewBag.Title = "Index";
}
<div class="w3-card w3-white" style="margin: 25px;">
    <div style="padding: 25px">
        <h2 class="articleTitle">My Articles</h2>

        <table class="table">
            <tr>
                <th>
                    <label>Title</label>
                </th>
                <th>
                    <label>Date</label>
                </th>
                <th>
                    <label>Preview</label>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.articlePreview)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.articleId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.articleId })
                    </td>
                </tr>
            }

        </table>

        <hr />

        <button class="w3-button w3-border padBig" onclick="location.href = '@Url.Action("Create", "MyArticles")'; return false;">Create A New Article >></button>
    </div>
</div>